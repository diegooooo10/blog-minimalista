---
export interface Props {
  slug: string;
  title: string;
  date: string;
  description: string;
  category: string;
}
const { slug, title, date, description, category } = Astro.props;
---

<article
  class="bg-slate-700 flex flex-col justify-center md:mb-10 mb-3 p-5 min-h-52 rounded-lg hover:scale-105 transition-all duration-200"
>
  <a href={`/blog/${slug}`} class="flex flex-col space-y-5">
    <h2 class="text-gray-50 font-bold text-2xl">{title}</h2>
    <p>{description}</p>
    <div class="flex justify-between">
      <p class="text-gray-300">{date}</p>
      <p class="font-bold">{category}</p>
    </div>
  </a>
</article>
